{
    "include": [
        "client/*.ts"
    ],
    "compilerOptions": {
        "paths": {
            "@/*": [ "./client/*" ]
        },
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noEmitOnError": false,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2017"],
        "target": "ES2017"
    }
}
